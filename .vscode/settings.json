{
    // PlatformIO IDE Settings
    "platformio-ide.useBuiltinPIOCore": false,
    "platformio-ide.useDevelopmentPIOCore": false,
    "platformio-ide.autoRebuildAutocompleteIndex": true,
    "platformio-ide.customPATH": null,
    "platformio-ide.pioHomeServerHttpPort": 8008,
    "platformio-ide.showPlatformIOFiles": true,
    
    // Serial Monitor Settings
    "serialMonitor.outputTimestamps": true,
    "serialMonitor.baudRate": 115200,
    "serialMonitor.lineEnding": "\r\n",
    "serialMonitor.encoding": "utf8",
    
    // C/C++ Configuration
    "C_Cpp.intelliSenseEngine": "Tag Parser",
    "C_Cpp.default.compilerPath": "",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/**",
        "${workspaceFolder}/lib/**",
        "${workspaceFolder}/include/**",
        "${workspaceFolder}/src/**"
    ],
    
    // ESP-IDF Settings
    "idf.port": "COM3",
    "idf.baudRate": "115200",
    "idf.flashBaudRate": "460800",
    "idf.monitorBaudRate": "115200",
    "idf.openOcdConfigs": [
        "board/esp32-wrover.cfg"
    ],
    
    // File Associations
    "files.associations": {
        "*.ino": "cpp",
        "*.pde": "cpp",
        "platformio.ini": "ini",
        "*.h": "c",
        "*.hpp": "cpp",
        "*.c": "c",
        "*.cpp": "cpp"
    },
    
    // Exclude certain files from the explorer
    "files.exclude": {
        "**/.pio": true,
        "**/build": true,
        "**/.pioenvs": true,
        "**/.piolibdeps": true,
        "**/.clang_complete": true,
        "**/.gcc-flags.json": true,
        "**/.vscode/.browse.c_cpp.db*": true,
        "**/.vscode/c_cpp_properties.json": true,
        "**/.vscode/launch.json": true
    },
    
    // Terminal Settings
    "terminal.integrated.env.windows": {
        "PATH": "${env:PATH}"
    },
    
    // Arduino Settings (if using Arduino extension)
    "arduino.path": "C:/Program Files (x86)/Arduino",
    "arduino.commandPath": "arduino_debug.exe",
    "arduino.logLevel": "info",
    "arduino.enableUSBDetection": true,
    "arduino.disableTestingOpen": false,
    "arduino.skipHeaderProvider": false,
    "arduino.additionalUrls": [
        "https://raw.githubusercontent.com/espressif/arduino-esp32/gh-pages/package_esp32_index.json",
        "https://arduino.esp8266.com/stable/package_esp8266com_index.json"
    ],
    
    // Code Formatting
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": true,
    
    // IntelliSense Settings
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "editor.parameterHints.enabled": true,
    "editor.wordBasedSuggestions": "matchingDocuments",
    
    // Git Settings
    "git.ignoreLimitWarning": true,
    
    // Wokwi Simulator Settings
    "wokwi.showWelcome": false,
    
    // Python Settings (for advanced IoT projects)
    "python.defaultInterpreterPath": "python",
    "python.linting.enabled": true
}
