{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "PlatformIO",
            "task": "Build",
            "group": "build",
            "problemMatcher": [
                "$platformio"
            ]
        },
        {
            "type": "PlatformIO",
            "task": "Upload",
            "group": "build"
        },
        {
            "type": "PlatformIO",
            "task": "Clean",
            "group": "build"
        },
        {
            "type": "PlatformIO",
            "task": "Monitor",
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                {
                    "owner": "platformio",
                    "pattern": {
                        "regexp": "^(.*)$",
                        "line": 1
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^.*Connecting.*",
                        "endsPattern": "^.*CTRL+C to exit.*"
                    }
                }
            ]
        },
        {
            "type": "shell",
            "label": "ESP-IDF: Build",
            "command": "idf.py",
            "args": ["build"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "ESP-IDF: Flash",
            "command": "idf.py",
            "args": ["-p", "COM3", "flash"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "type": "shell",
            "label": "ESP-IDF: Monitor",
            "command": "idf.py",
            "args": ["-p", "COM3", "monitor"],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
