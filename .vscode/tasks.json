{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Arduino: Verify",
      "type": "shell",
      "command": "arduino-cli",
      "args": [
        "compile",
        "--fqbn",
        "${config:arduino.defaultBoard}",
        "${workspaceFolder}"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Arduino: Upload",
      "type": "shell",
      "command": "arduino-cli",
      "args": [
        "upload",
        "--fqbn",
        "${config:arduino.defaultBoard}",
        "--port",
        "${config:arduino.defaultPort}",
        "${workspaceFolder}"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "dependsOn": "Arduino: Verify"
    },
    {
      "label": "ESP32: Build",
      "type": "shell",
      "command": "arduino-cli",
      "args": [
        "compile",
        "--fqbn",
        "esp32:esp32:esp32",
        "${workspaceFolder}"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "ESP32: Upload",
      "type": "shell",
      "command": "arduino-cli",
      "args": [
        "upload",
        "--fqbn",
        "esp32:esp32:esp32",
        "--port",
        "${config:arduino.defaultPort}",
        "${workspaceFolder}"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "dependsOn": "ESP32: Build"
    },
    {
      "label": "PlatformIO: Build",
      "type": "PlatformIO",
      "command": "platformio",
      "args": [
        "run"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "PlatformIO: Upload",
      "type": "PlatformIO",
      "command": "platformio",
      "args": [
        "run",
        "--target",
        "upload"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "PlatformIO: Clean",
      "type": "PlatformIO", 
      "command": "platformio",
      "args": [
        "run",
        "--target",
        "clean"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Open Serial Monitor",
      "type": "shell",
      "command": "arduino-cli",
      "args": [
        "monitor",
        "--port",
        "${config:arduino.defaultPort}",
        "--config",
        "baudrate=115200"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      },
      "isBackground": true,
      "runOptions": {
        "instanceLimit": 1
      }
    }
  ]
}